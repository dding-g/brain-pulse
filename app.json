{
  "expo": {
    "name": "BrainPulse",
    "slug": "brain-pulse",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "brainpulse",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1A1B2E"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.brainpulse.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1A1B2E"
      },
      "package": "com.brainpulse.app"
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      ["expo-router", { "root": "./src/app" }],
      "expo-sqlite"
    ]
  }
}
